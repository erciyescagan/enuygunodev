{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <h1>Assignments</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col"><i class="fa fa-male" aria-hidden="true"></i> Developer</th>
                <th scope="col"><i class="fa fa-tasks" aria-hidden="true"></i> Task</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Time</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i>Difficulty</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.dname }}</td>
                <td>{{ post.task }}</td>
                <td  class="text-right">{{ post.ttime }}</td>
                <td  class="text-right">{{ post.tdifc }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No Assignments found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

